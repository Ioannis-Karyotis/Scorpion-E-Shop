<%- include("./../partials/header")%>

<div id="main" class="main container mb-5">
    <div class="row d-flex justify-content-around my-4">
	    <form action="/products/<%=type%>/<%=id%>/addColors" class="col-lg-6" method="post">
	        <div class="desc py-5">
				<h1 class="pb-5">Εισαγωγή Χρώματος</h1>
	            <div class="form-group pl-2">
	                <span class="d-flex align-items-center">
	                	<input type="text" name="color" class="form-control  mr-3" placeholder="Όνομα Χρώματος" required>
	                	<i class="fas fa-info-circle fa-lg ">
	                		<div class="tooltiptext">Το πεδίο αυτό αντιπροσωπεύει το όνομα του χρώματος</div>
	                	</i>
	                </span>
	            </div>
	            <div class="form-group pl-2">
	            	<span class="d-flex align-items-center">
	                	<input type="text" name="colorHex" class="form-control  mr-3" placeholder="Hexadecimal Value" required>
	                	<i class="fas fa-info-circle fa-lg ">
	                		<div class="tooltiptext">Ορίστε τη 16δική τιμή του χρώματος</div>
	                	</i>
	                </span>
	            </div>
	            <div class="form-group">
	                <button class="btn btn-primary" type="submit">Υποβολη</button>
	            </div>
	        </div>
		</form>
	</div>
</div>

<%- include("./../partials/footer")%>
