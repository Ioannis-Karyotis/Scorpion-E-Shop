<%- include("./../partials/header")%>

<div id="main" class="container product mb-5">

  <div class="row mx-auto my-2" style="text-align:center">
    <div class="mx-auto">
      <h1>
      Προϊόντα
      </h1>
    </div>
  </div>
  <hr class="pic thick  mx-5">

  <div  class="container">
  <div class="row my-5 mx-5 d-flex justify-content-lg-start justify-content-around">
<% products.forEach(function(product){ %>

      <% if(product.status=="hidden" && admin=="admin"){ %>
      <div class="px-0 col-12 col-sm-9 col-md-6 col-lg-4  mb-4 d-flex justify-content-center">
        <div class="card opac" style="border-radius:0px;">
      <%}else if(product.status=="hidden" && !admin){%>
      <div class="px-0 col-0">
        <div class="card hidden" style="border-radius:0px;">
      <%}else{%>
      <div class="px-0 col-12 col-sm-9 col-md-6 col-lg-4  mb-4 d-flex justify-content-center">
        <div class="card" style="border-radius:0px;">
      <%} %>
        <img src="<%=product.images[0].url %>" onclick="document.getElementById('product_modal_<%= product._id %>').style.display='block'" class="card-img-top" alt="" style="border-radius:0px;">
        <div class="card-footer py-0 px-0">
          <div class="row px-4 pt-2 d-flex justify-content-start">
              <h4><%=product.name %></h4>
          </div>
          <div class="row px-4 pb-1 d-flex justify-content-end" >
              <h4 ><%=product.price %>€</h4>
          </div>
          <a class="btn btn-dark btn-lg btn-block" style="border-radius:0px; " href="/products/<%=product.type %>/<%=product._id%>">
            Λεπτομέρειες
          </a>
        </div>
      </div>
      <div>
      <% if(admin=="admin"){ %>
        <button class="btn btn-danger mx-0" style="height:2.5em; width:3em;" onclick="deleteProduct('<%=product._id%>','<%=product.type%>')">
          <i class="fas fa-times fa-lg"></i>
        </button>
        <% if(product.status=="hidden"){ %>
        <button class="btn btn-secondary mx-0" style="height:2.5em;width:3em;" onclick="hideProduct('<%=product._id%>','<%=product.type%>')">
          <i class="fas fa-eye"></i>
        </button>
        <%}else{%>
          <button class="btn btn-secondary mx-0" style="height:2.5em;width:3em;" onclick="hideProduct('<%=product._id%>','<%=product.type%>')">
          <i class="fas fa-eye-slash"></i>
          </button>
        <%}%>
      <%}%>
       </div>
    </div>



<div class="modal" id="product_modal_<%= product._id %>">
  <div class="container-fluid">
    <div class="modal-content animate ">
      <div id="Xbutton">
                  <a onclick="document.getElementById('product_modal_<%= product._id %>').style.display='none'" class="cancelbtn">
                      <i class="fas fa-times fa-lg"></i>
                  </a>
        </div>
        <div class="row">
          <div class="col-md-7  pr-0 mr-0">
            <div id="carouselExampleControls_<%= product._id %>" class="carousel slide" data-interval="false">
              <div class="carousel-inner">
                <% Object.keys(product.images).forEach(function(key) { %>
                  <div class="carousel-item modal-carousel
                  <% if(key == 0){ %>
                      active">
                  <% } else{ %>
                      ">
                  <% } %>
                      <img class="d-block w-100" src="<%=product.images[key].url%>" alt="">
                  </div>
                <% }) %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls_<%= product._id %>" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls_<%= product._id %>" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
          <div class="col-md-5 pl-0 ml-0">
            <div class="container px-0 ">
              <div class="row">
                <div class="col-12 pt-2 mt-4 align-center"> <!--name -->
                  <h4><%=product.name %></h4>
                </div>
              </div>
              <hr class="thin mx-5">
              <div class="row mx-1">
                <div class="col-12 align-center">
                  <h4><%=product.price%>€</h4>
                </div>
              </div>
              <div class="row mx-1">
                <div class="col-md-12 align-center">
                  <h6><%=product.description%></h6>
                </div>
              </div>
              <div class="px-2 mt-5 mb-2 align-center">
                <form action="/products/<%=product.type%>/<%=product._id%>/add" method="POST">
                  <button class="btn btn-dark btn-lg" style="border-radius:0px" type="submit">
                    Προσθήκη στο καλάθι
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% }) %>
    <% if(admin === 'admin') { %>
    <div class="px-0 col-12 col-sm-9 col-md-6 col-lg-4  mb-4 d-flex justify-content-center">
      <div class="card" style="margin-right:5em; height:18.2em;" style="border-radius:0px;">
        <a href="http://localhost:3000/products/<%= type %>/add">
          <img  src="http://localhost:3000/images/add.png">
        </a>
      </div>
    </div>
      <% } %>
    </div>
  </div>
  </div>
</div>
<script type="text/javascript" src="/scripts/products.js"></script>
<%- include("./../partials/footer")%>
