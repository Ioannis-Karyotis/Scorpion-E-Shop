<%- include("./../partials/header")%>

<div id="main" class="container product">

  <div class="row mx-auto my-2" style="text-align:center">
    <div class="mx-auto">
      <h1>
      Προϊόντα
      </h1>
    </div>
  </div>
  <hr class="pic mx-5">

  <div  class="container">
  <div class="row my-5 mx-5 d-flex justify-content-lg-start justify-content-around">
<% products.forEach(function(product){ %>
    <div class="px-0 col-12 col-sm-9 col-md-6 col-lg-4  mb-4 d-flex justify-content-center">
      <div class="card" style="border-radius:0px;">
        <img src="<%=product.images[0].url %>" onclick="document.getElementById('product_modal_<%= product._id %>').style.display='block'" class="card-img-top" alt="" style="border-radius:0px;">
        <div class="card-footer py-0 px-0">
          <div class="row px-4 pt-2 d-flex justify-content-start">
              <h4><%=product.name %></h4>
          </div>
          <div class="row px-4 pb-1 d-flex justify-content-end" >
              <h4 ><%=product.price %>€</h4>
          </div>
          <a class="btn btn-dark btn-lg btn-block" style="border-radius:0px; " href="/products/<%=product.type %>/<%=product._id%>">
            Λεπτομέρειες
          </a>
        </div>
      </div>
    </div>


<div class="modal" id="product_modal_<%= product._id %>">
  <div class="container-fluid">
    <div class="modal-content animate ">
      <div id="Xbutton">
                  <a onclick="document.getElementById('product_modal_<%= product._id %>').style.display='none'" class="cancelbtn">
                      <i class="fas fa-times fa-lg"></i>
                  </a>
        </div>
        <div class="row">
          <div class="col-md-8">
            <div id="carouselExampleControls_<%= product._id %>" class="carousel slide" data-interval="false">
              <div class="carousel-inner">
                <% Object.keys(product.images).forEach(function(key) { %>
                  <div class="carousel-item modal-carousel
                  <% if(key == 0){ %>
                      active">
                  <% } else{ %>
                      ">
                  <% } %>
                      <img class="d-block w-100" src="<%=product.images[key].url%>" alt="">
                  </div>
                <% }) %>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleControls_<%= product._id %>" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleControls_<%= product._id %>" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card-body">
              <h5 class="card-title"><%=product.name %></h5>
              <p class="card-text"><%=product.description %></p>
              <a href="/products/<%=product.type%>/<%=product._id%>/add" type="button" class="btn btn-primary">
                Add to Cart
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% }) %>
    <% if(admin === 'admin') { %>
    <div class="px-0 col-12 col-sm-9 col-md-6 col-lg-4  mb-4 d-flex justify-content-center">
      <div class="card" style="border-radius:0px;">
        <a href="http://localhost:3000/products/<%= type %>/add">
          <img  src="http://localhost:3000/images/add.png">
        </a>
      </div>
    </div>
      <% } %>
    </div>
  </div>
  </div>
</div>

<%- include("./../partials/footer")%>
