<%- include("partials/header")%>
<div id="cart-id" class="container main cart-container">
  <%if(session.productList && session.productList.length > 0){ %>
    <div class="shopping-cart">
    <% session.productList.forEach(function(item){ %>
      <div class="product">
        <div class="product-image">
          <img src="<%=	item.product.images[0].url %>"></img>
        </div>
        <div class="product-details">
          <div class="product-title">
            <%=item.product.name%>
          </div>
          <p class="product-description">
            <%=item.product.description%>
          </p>
        </div>
        <div class="product-price">
          <%=item.product.price%>
        </div>
        <div class="product-quantity">
          <% var id = item.product._id%>
          <input id="<%=id%>" type="number" value="<%=item.quantity%>" min="1" onchange="qtyUpdate()">
        </div>
        <div class="product-removal">
          <button id="<%=id%>" class="remove-product" onclick="removeProduct()">
            Remove
          </button>
        </div>
        <div id="itm-prc<%=id%>" class="product-line-price">
          <%=item.price%>
        </div>
      </div>
     <%});%>
     <div class="totals">
       <div class="totals-item">
         <label>
           Subtotal
         </label>
         <div class="totals-value" id="cart-subtotal">
           0.0
         </div>
       </div>
       <div class="totals-item">
         <label>
           Tax (5%)
         </label>
         <div class="totals-value" id="cart-tax">
           0.0
         </div>
       </div>
       <div class="totals-item">
         <label>
           Shipping
         </label>
         <div class="totals-value" id="cart-shipping">
           0.0
         </div>
       </div>
       <div class="totals-item totals-item-total">
         <label>
           Grand Total
         </label>
         <div class="totals-value" id="cart-total">
           <%=session.cart.totalPrice%>
         </div>
       </div>
     </div>
     <button class="checkout">
       Checkout
     </button>
   </div>
  <%}else{ %>
    Το καλάθι σας είναι άδειο
  <%}%>
</div>
<%- include("partials/footer")%>
