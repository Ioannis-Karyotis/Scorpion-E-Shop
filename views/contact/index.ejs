<%- include("./../partials/header")%>

<div id="main" class="main no-gutters">
    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12109.816079340462!2d22.9468551!3d40.6419212!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb95aaab570b5d30a!2zzprOkc6hzqXOqc6kzpfOoyDOo86kzpXOps6Rzp3On86j!5e0!3m2!1sel!2sgr!4v1590061718860!5m2!1sel!2sgr"  frameborder="0" style="border:0; width:100%;height:40em;" allowfullscreen="" aria-hidden="false" tabindex="0">   	
    </iframe>
</div>
<div class="container-fluid main mb-5" align="center">
    <div class="row d-flex justify-content-around">
    	<div class="col-12 col-md-6 py-3 ">
    		<div class="desc px-5 jumbotron-mini" style="border-radius: 5px;">
				<form id="contact-form" action="/contact" method="POST">
					<h4 >Επικοινωνήστε μαζί μας:</h4>
					<hr class="thick">
					<%if(user) {%>
					<div class="form-group mx-1">
		                <span class="d-flex align-items-center">
		                	<input type="text" name="name" class="form-control" placeholder="Όνομα" value="<%= user[method].name %>" required>
		                	<i class="fas fa-info-circle fa-lg ml-1">
		                		<div class="tooltiptext">Σε αυτό το πεδίο εισάγετε το Όνομά σας</div>
		                	</i>
		                </span>	
		            </div>
		            <div class="form-group  mx-1">
		                <span class="d-flex align-items-center">
		                	<input type="text" name="surname" class="form-control" placeholder="Επίθετο"  value="<%= user[method].surname %>" required>
		                	<i class="fas fa-info-circle fa-lg ml-1">
		                		<div class="tooltiptext">Σε αυτό τα πεδίο εισάγετε το Επώνυμό σας</div>
		                	</i>
		                </span>	
		            </div>
		            <div class="form-group mx-1">
		                <span class="d-flex align-items-center">	
		                	<input type="text" name="email" class="form-control" placeholder="E-mail" value="<%= user[method].email %>" required>
		                	<i class="fas fa-info-circle fa-lg ml-1">
		                		<div class="tooltiptext">Το πεδίο αυτό πρέπει να έχει τη μορφή " example@gmail.com "</div>
		                	</i>
		                </span>	
		            </div>
					<% }else{ %>
					<div class="form-group mx-1">
		                <span class="d-flex align-items-center">
		                	<input type="text" name="name" class="form-control" placeholder="Όνομα" value="<%= validated.name %>" required>
		                	<i class="fas fa-info-circle fa-lg ml-1">
		                		<div class="tooltiptext">Σε αυτό το πεδίο εισάγετε το Όνομά σας</div>
		                	</i>
		                </span>	
		            </div>
		            <div class="form-group  mx-1">
		                <span class="d-flex align-items-center">
		                	<input type="text" name="surname" class="form-control" placeholder="Επίθετο"  value="<%= validated.surname %>" required>
		                	<i class="fas fa-info-circle fa-lg ml-1">
		                		<div class="tooltiptext">Σε αυτό τα πεδίο εισάγετε το Επώνυμό σας</div>
		                	</i>
		                </span>	
		            </div>
		            <div class="form-group  mx-1">
		                <span class="d-flex align-items-center">	
		                	<input type="text" name="email" class="form-control" placeholder="E-mail" value="<%= validated.email %>" required>
		                	<i class="fas fa-info-circle fa-lg ml-1">
		                		<div class="tooltiptext">Το πεδίο αυτό πρέπει να έχει τη μορφή " example@gmail.com "</div>
		                	</i>
		                </span>	
		            </div>
					<% } %>
					<div class="form-group pr-3 mx-1">
		                <span class="d-flex align-items-center">	
							<textarea name="description" rows="4" class="form-control" cols="60" placeholder="Θέμα"></textarea>
						</span>
					</div>
					<div class="form-group">
		                <button class="btn btn-primary mr-3" style="width:15em;" type="submit">Αποστολη</button>
		            </div>
		            <% if(regError&& regError.length > 0){ %>
						<div id="error" class="alert alert-danger mr-3" role="alert">
							<%= regError %>
						</div>
					<%}%>
					<% if(genSuccess&& genSuccess.length > 0){ %>
						<div id="success" class="alert alert-success mr-3" role="alert">
							<%= genSuccess %>
						</div>
					<%}%>
				</form>
			</div>
		</div>
		<div class="col-12 col-md-6 justify-content-md-start justify-content-start py-3">
				<div class=" px-5 jumbotron-mini" style="border-radius: 5px;">
		            <h4 align="left">Βρείτε μας:</h4>
		            <hr class="thick">
		            <h6 align="left" class="info"><i class="fas fa-phone fa-lg  mr-3"></i>2310-281-363</p></h6>
		            <h6 align="left" class=" pt-3"><i class="fas fa-envelope fa-lg  mr-3"></i><span class="con" style="display: inline-block;">info@scorpionclothing.gr</span></h6>
		            <h6 align="left" class="mt-3 pt-3"><i class="far fa-clock fa-lg mr-3"></i><span class="con"><b>Δευτ. - Παρ. :</b> 09:00 - 21:00</span></h6>
		            <h6 align="left"><i class="far fa-clock fa-lg mr-3" style="visibility: hidden;"></i><span class="con"><b>Σαβ. :</b> 09:00 - 14:00</span></h6>	
		        </div>
		    <div class="row d-flex justify-content-center mt-5 px-2">
		    	<div class="px-5 jumbotron-mini" style="border-radius: 5px;">
		    		<img  src="<%=root%>/images/logo.png" style="width:360x; height:90px;">
		    	</div>
		    </div>
		</div>	
	</div>	
</div>
<script type="text/javascript" src="/scripts/contact.js"></script>

<%- include("./../partials/footer")%>