<%- include("partials/header")%>

<div id="main" class="main container mb-5">
    <div class="row my-4">
        <div class="col-12  d-flex justify-content-center py-5">
            
            <form action="/nexus/lol/whatever/mustnotsee" class="col-lg-6" method="post">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                <div class="desc">
                    <h1 class='pb-3'>Είσοδος Διαχειρηστή</h1>

                    <div class="form-group mx-1">
                        <span class="d-flex align-items-center">    
                            <input type="text" name="email" class="form-control mr-3" placeholder="E-mail" required>
                            <i class="fas fa-info-circle fa-lg ">
                                <div class="tooltiptext">Εισάγετε το ήδη υπάρχον E-mail Διαχειρηστή</div>
                            </i>
                        </span> 
                    </div>
                    <div class="form-group mx-1">
                        <span class="d-flex align-items-center">    
                            <input type="password" name="password" class="form-control mr-3" placeholder="Password" required>
                            <i class="fas fa-info-circle fa-lg">
                                <div class="tooltiptext">Εισάγετε το μυστικό κωδικό Διαχειρηστή</div>
                            </i>
                        </span> 
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary mr-3" type="submit">Login</button>
                    </div>
                </div>
                <% if(error&& error.length > 0){ %>
                    <div class="alert alert-danger mr-3 my-4 desc" role="alert">
                        <%= error %>
                    </div>
                <%}%>
                <% if(genSuccess&& genSuccess.length > 0){ %>
                    <div class="alert alert-success mr-3 my-4 desc" role="alert">
                        <%= genSuccess %>
                    </div>
                <%}%>         
            </form>
            
        </div>
    </div>            
</div>

<%- include("partials/footer")%>