<% if(genSuccess && genError.length > 0){ %>
<div class="container">
	<div class="alert alert-danger" role="alert">
		<%= genError %>
	</div>
</div>
<% }else if(genSuccess && genSuccess.length > 0) {%>
<div class="container">
	<div class="alert alert-success" role="alert">
		<%= genSuccess %>
	</div>
</div>
<% } %>
