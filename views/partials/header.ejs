<body>
	<nav class="navbar navbar-expand navbar-light bg-light  py-0 ">
		<% if(!currentUser){ %>
			<div class="container-fluid" style="margin-top: 0.2em;">
		<% } else { %>
			<div class="container-fluid" style="margin-bottom: -0.4em;">
		<%}%>	
			<div class="row">
				<ul id="f-nav" class="navbar-nav ml-auto">
					<!-- <div class="go-left"> -->
			    	<% if(!currentUser){ %>
						<li  class="nav-item go-left-first" >
							<a class="nav-link" href="/login">
								<span>
									<i class="fas fa-sign-in-alt"></i> Είσοδος
								</span>
							</a>
						</li>
						<li class="nav-item go-left-second" >
							<a class="nav-link" href="/register">
								<span>
									 <i class="fas fa-user-plus"></i> Εγγραφή
								</span>
							</a>
						</li>
				    <% } else { %>
						<li class="nav-item go-left-first">
						<a class="nav-link d-flex align-items-start justify-content-around" href="/user/<%= currentUser._id%>">
							<% if(!currentUser[currentUser.methods].profile) {%>
								<img src="http://localhost:3000/images/blank.png" alt="Avatar" class="blank-mini mr-1" >  <span> Προφίλ</span>
							<% }else{ %>
								<img src="<%=currentUser[currentUser.methods].profile%>" alt="Avatar" class="blank-mini mr-1" >  <span> Προφίλ</span>
							<%}%>	
						</a>
						</li>
						<li class="nav-item go-left-second-logged ">
							<a class="nav-link" href="/logout">
								<span>
									<i class="fas fa-sign-out-alt"></i> Έξοδος
								</span>
							</a>
				      </li>
				  <!--     </div> -->
			      	<% } %>
			      			<% if(!currentUser){ %>
			      				<li  class="nav-item">
			      			<% } else { %>
								<li  class="nav-item">
			      			<%}%>
							
								<span class="nav-link" href=""> <!-- span instead of a so that the links inside work-->
									<span data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<i id="cart-glyphicon" class="fas fa-shopping-cart badge-pill pl-1 ml-1">
												<%if(session.cart){%>
													<%if(session.cart.totalQuantity > 0){%>
														<%=session.cart.totalQuantity%>%>
													<%}%>
												<%}%>
										</i>
									</span>
									<div class="dropdown-menu dropdown-menu-right cart-fonts">
								    <%if(session.productList && session.productList.length > 0){ %>
											<div class="align-center pb-2" >
												<div id="quick_total_qty" class="col-12 total-quantity-info" >
													Το καλάθι σας έχει <%=session.cart.totalQuantity%>
													<%if(session.cart.totalQuantity > 1){ %>
														προϊόντα
													<%}else{%>
														προϊόν
													<%}%>
												</div>
											</div>
											<div class="container quick-cart-container " >
											 <% session.productList.forEach(function(item){ %>
												 <!-- <div class="dropdown-item"> -->

													 <div class="row my-2 jumbotron-mini">
														 <div class="col-4 align-center" > <!--picture -->
															 <div>
															 	<img class="quick-cart-img" src="<%=item.product.images[0].url %>"></img>
															</div>
														 </div>
														 <div class="col-8">
															 <div class="row mx-auto mb-2">
																 <div class="col-10" ><!--name -->
																	 <%= item.product.name %>
																 </div>
																 <div class="col-2 px-1 d-flex justify-content-center "><!--remove -->
																	 <p>
																	 	<a class="cancelbtn" >
																		 	<i id="rmvq_<%= item.product._id%>" class="fas fa-times fa-lg " onclick="removeProduct()"></i>
																		 </a>
																	 </p>
																 </div>
															 </div>
															 <div class="row mx-auto my-auto">
																 <div class="col-4"><!--price -->
																	 <%= item.product.price %>€
																 </div>
																 <div id="quick_qty<%= item.product._id%>" class="col-4 align-center"><!--qty -->
																	 x<%=item.quantity%>
																 </div>
																 <div id="quick_product_total<%=item.product._id%>" class="col-4  align-right"><!--total price -->
																	 <%= item.price %>€
																 </div>
															 </div>
														 </div>
													 </div>
													 
												<!-- </div> -->
											 <%});%>
											 	<div class="row my-2 mx-1">
													<div class="col-6">
														Σύνολο
													</div>
													<div id="quick_total" class="col-6 align-right">
														<%=session.cart.totalPrice%>€
													</div>
												</div>
												 <a class="align-center btn btn-dark btn-lg btn-block" style="border-radius:0px;" href="/cart">
													 Μεταβαση στο καλαθι
												 </a>
										 </div>
										<%}else{ %>
												<div class="align-center total-quantity-info">
													<p>Δεν υπάρχουν προϊόντα στο καλάθι σας!</p>
												</div>
										<%}%>
							  	</div>
								</span>
							</li>
				</ul>
			</div>
		</div>
	</nav>


	<nav id="logo-nav" class="navbar navbar-expand-md navbar-light bg-light pt-0 pb-1 mt-n2">
		<div class="container-fluid center-content">
			<div class="row">
				<div id="smth" class="my-auto mx-auto px-auto">
					<% if(!currentUser){ %>
	      				<a id="logo-bck" class="mt-n2 mx-auto my-auto d-flex justify-content-center" href="/">
							<img src="http://localhost:3000/images/logo4.png" style="width: :350px; height:79px; ">
						</a>
	      			<% } else { %>
