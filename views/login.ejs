<%- include("partials/header")%>

<div id="main" class="main container mb-5">
    <div class="row">
        <div class="col-12  d-flex justify-content-around py-5">
            
            <form action="/login" class="col-lg-6" method="post">
                <div class="desc">
                    <h1 class='pb-3'>Είσοδος</h1>

                    <div class="form-group pl-2">
                        <span class="d-flex align-items-center">    
                            <input type="text" name="email" class="form-control mr-3" placeholder="E-mail" required>
                            <i class="fas fa-info-circle fa-lg ">
                                <div class="tooltiptext">Εισάγετε το ήδη υπάρχον E-mail σας</div>
                            </i>
                        </span> 
                    </div>
                    <div class="form-group pl-2">
                        <span class="d-flex align-items-center">    
                            <input type="password" name="password" class="form-control mr-3" placeholder="Password" required>
                            <i class="fas fa-info-circle fa-lg">
                                <div class="tooltiptext">Εισάγετε το μυστικό κωδικό σας</div>
                            </i>
                        </span> 
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary mr-3" type="submit">Login</button>
                    </div>
                </div>
                <% if(error&& error.length > 0){ %>
                    <div class="alert alert-danger mr-3" role="alert">
                        <%= error %>
                    </div>
                <%}%>
                <% if(genSuccess&& genSuccess.length > 0){ %>
                    <div class="alert alert-success mr-3" role="alert">
                        <%= genSuccess %>
                    </div>
                <%}%>

                <hr class="thick mr-3">
                <div class='desc mr-3'>
                    <h5>Δεν έχεις λογαριασμό;</h5>
                    <h5>Κάνε <a href="/register">Εγγραφή</a> </h5>
                    <h5>αλλιώς συνδέσου μέσω</h5>
                    <a href="/auth/facebook" class="btn btn-primary facebook"><span><i class="fab fa-facebook-f fa-lg pr-2"></i></span>  Facebook</a>
                    <span class="px-2">ή</span>
                    <a href="/auth/google" class="btn btn-danger google"><span><i class="fab fa-google fa-lg pr-2"></i></span> Google</a>
                </div>            
            </form>
            
        </div>
    </div>            
</div>

<%- include("partials/footer")%>