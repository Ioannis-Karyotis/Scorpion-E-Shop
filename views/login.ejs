<%- include("partials/header")%>

<div id="main" class="main container">
    <div class="row">
        <div class="col-12  d-flex justify-content-around py-5">
            <form action="/login" class="col-lg-6" method="post">
                <div class="desc">
                    <h1 class='pb-3'>Είσοδος</h1>
                    <div class="form-group pl-2">
                        <% if(error && error.length > 0){ %>
                            <input onfocus="this.value=''" class="wrninput" type="text" name="email" value="<%= error %>" placeholder="E-mail" required>    
                        <% }else{ %>
                            <input type="text" name="email" placeholder="E-mail" required>
                        <% } %>
                        <i class="fas fa-info-circle fa-lg px-2">
                            <div class="tooltiptext">Εισάγετε το ήδη υπάρχον E-mail σας</div>
                        </i>
                    </div>
                    <div class="form-group pl-2">
                        <input type="password" name="password" placeholder="Password" required>
                        <i class="fas fa-info-circle fa-lg px-2">
                            <div class="tooltiptext">Εισάγετε το μυστικό κωδικό σας</div>
                        </i>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success" type="submit">Login</button>
                    </div>
                </div>
                <hr>
                <div class='desc'>
                    <h5>Δεν έχεις λογαριασμό;</h5>
                    <h5>Κάνε <a href="/register">Εγγραφή</a> </h5>
                    <h5>αλλιώς συνδέσου μέσω</h5>
                    <a href="/auth/facebook" class="btn btn-primary pt-2 facebook"><span><i class="fab fa-facebook-f fa-lg pr-2"></i></span>  Facebook</a>
                    <span class="px-2">ή</span>
                    <a href="/auth/google" class="btn btn-danger google pt-2"><span><i class="fab fa-google fa-lg pr-2"></i></span> Google</a>
                </div>            
            </form>
            
        </div>
    </div>            
</div>

<%- include("partials/footer")%>